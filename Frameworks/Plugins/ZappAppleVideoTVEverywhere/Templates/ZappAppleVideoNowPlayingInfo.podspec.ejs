Pod::Spec.new do |s|
  s.name             = "ZappAppleVideoTVEverywhere"
  s.version          = '<%= version_id %>'
  s.summary          = "ZappAppleVideoTVEverywhere"
  s.description      = <<-DESC
  ZappAppleVideoTVEverywhere container.
                       DESC
  s.homepage         = "https://github.com/applicaster/AppleApplicasterFrameworks.git"
  s.license          = 'CMPS'
	s.author           = "Applicaster LTD."
  s.source           = { :git => 'https://github.com/applicaster/AppleApplicasterFrameworks.git',
                         :tag => '<%= new_tag %>'  }
  s.platform = :tvos, :ios
  s.tvos.deployment_target = '11.0'
  s.ios.deployment_target = '11.0'
  s.requires_arc = true
  s.static_framework = true
  s.swift_versions = '5.1'

  s.frameworks = 'AVKit'
  s.ios.frameworks = 'MediaPlayer', 'VideoSubscriberAccount'

  s.ios.source_files  = [
    'Universal/**/*.swift',
    'ios/**/*.swift'
  ]
  s.tvos.source_files  = [
    'Universal/**/*.swift',
    'tvOS/**/*.swift'
  ]

  s.xcconfig =  {
                  'CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES' => 'YES',
                    'ENABLE_BITCODE' => 'YES'
                }

  s.dependency 'ZappCore'

  s.test_spec 'UnitTests' do |sp|
    sp.source_files = 'Tests/**'
  end
end
